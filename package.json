{
  "name": "floss",
  "version": "2.2.0",
  "description": "Unit-testing for those hard to reach places",
  "bin": "./bin/floss.js",
  "main": "./index.js",
  "author": "Matt Karl <matt.karl@jibo.com>",
  "contributors": [
    "Matt Bittarelli <matt.bittarelli@jibo.com>"
  ],
  "scripts": {
    "lint": "eslint index.js electron bin test",
    "pretest": "npm run lint",
    "test": "node bin/floss.js --path=test/index.js",
    "start": "npm test -- --debug",
    "preversion": "npm test",
    "postpublish": "git push && git push --tags",
    "publish:patch": "npm version patch && npm publish",
    "publish:minor": "npm version minor && npm publish",
    "publish:major": "npm version major && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:pixijs/floss.git"
  },
  "bugs": {
    "url": "https://github.com/pixijs/floss/issues"
  },
  "homepage": "https://github.com/pixijs/floss",
  "engines": {
    "node": ">=4.0"
  },
  "license": "MIT",
  "keywords": [
    "mocha",
    "sinon",
    "chai",
    "mocha-electron",
    "electron-mocha",
    "electron",
    "test",
    "tests",
    "unit-tests",
    "unit-testing",
    "travis",
    "travis-ci"
  ],
  "dependencies": {
    "chai": "^3.5.0",
    "chalk": "^2.4.2",
    "commander": "^2.19.0",
    "find-root": "^1.0.0",
    "glob": "^7.1.3",
    "istanbul": "^0.4.5",
    "mocha": "^5.2.0",
    "object-assign": "^4.1.0",
    "remap-istanbul": "^0.12.0",
    "resolve": "^1.9.0",
    "sinon": "^4.2.2",
    "sinon-chai": "^2.8.0",
    "strip-ansi": "^5.0.0"
  },
  "peerDependencies": {
    "electron": ">=1"
  },
  "devDependencies": {
    "electron": "^5.0.9",
    "eslint": "^5.12.0"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "rules": {
      "no-console": 0,
      "no-debugger": 1
    },
    "parserOptions": {
      "ecmaVersion": 5,
      "sourceType": "module"
    },
    "env": {
      "browser": true,
      "node": true,
      "mocha": true
    },
    "globals": {
      "expect": true
    }
  }
}
